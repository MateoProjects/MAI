    <sentence id="DDI-MedLine.d199.s0" text="Prevention of emergence agitation in seven children receiving low-dose ketamine and propofol total intravenous anesthesia.&#xd;&#xa;">
        <entity id="DDI-MedLine.d199.s0.e0" charOffset="71-78"
            type="drug" text="ketamine"/>
        <entity id="DDI-MedLine.d199.s0.e1" charOffset="84-91"
