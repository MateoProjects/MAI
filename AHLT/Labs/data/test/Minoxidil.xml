    <sentence id="DDI-DrugBank.d573.s1" text="If at all possible guanethidine should be discontinued well before minoxidil is begun. ">
        <entity id="DDI-DrugBank.d573.s1.e0" charOffset="19-30"
            type="drug" text="guanethidine"/>
        <entity id="DDI-DrugBank.d573.s1.e1" charOffset="67-75"
            type="drug" text="minoxidil"/>
        <pair id="DDI-DrugBank.d573.s1.p0" e1="DDI-DrugBank.d573.s1.e0"
